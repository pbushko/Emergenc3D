<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pbush.modelhelp.GlActivity">

    <Button
        android:id="@+id/zoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setScaledZoomIn"
        android:text="Zoom In"></Button>

    <Button
        android:id="@+id/zoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setScaledZoomOut"
        android:text="Zoom Out"></Button>

    <com.example.pbush.modelhelp.OpenGLView
        android:id="@+id/openGLView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>